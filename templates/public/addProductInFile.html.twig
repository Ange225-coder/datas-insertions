{% extends 'base.html.twig' %}

{% block title %}Add product in file system{% endblock %}

{% block body %}
    <section>
        <h1>Ajout de produits dans le system de fichier</h1>


        {{ form_start(productInFile, {'attr' : {'novalidate' : 'novalidate'}}) }}
            <div>
                <div>
                    {{ form_errors(productInFile.name) }}<br >
                    {{ form_widget(productInFile.name) }}
                </div>

                <div>
                    {{ form_errors(productInFile.price) }}<br >
                    {{ form_widget(productInFile.price) }}
                </div>

                <div>
                    {{ form_errors(productInFile.image) }}<br >
                    {{ form_widget(productInFile.image) }}
                </div>

                <button type="submit" style="margin-top: 20px;">Ajouter le produit</button>
            </div>
        {{ form_end(productInFile) }}
    </section>
{% endblock %}